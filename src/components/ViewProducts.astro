---
import CardProducts from "./CardProducts.astro";
const { products } = Astro.props;
import type { Producto } from "@/types";
---

<div class="w-full">
  {
    products.length > 0 ? (
      <div
        class="grid grid-cols-2 gap-x-8 md:grid-cols-3 lg:grid-cols-4 gap-y-8 p-2 w-full mb-10 md:mb-16"
        id="cards"
      >
        {products.map((per: Producto) => (
          <CardProducts
            slug={per.slug}
            discount={per.discount}
            image={`${per.images[0]?.url}`}
            title={per.title}
            price={per.price}
          />
        ))}
      </div>
    ) : (
      <div
        class="flex justify-center w-full py-3 items-center "
        id="cards"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          width="24"
          height="24"
          stroke-width="2"
          class="stroke-gray-700"
          stroke-linejoin="round"
          stroke-linecap="round"
          stroke="currentColor"
        >
          <path d="M3 21l18 0" />
          <path d="M3 7v1a3 3 0 0 0 6 0v-1m0 1a3 3 0 0 0 6 0v-1m0 1a3 3 0 0 0 6 0v-1h-18l2 -4h14l2 4" />
          <path d="M5 21l0 -10.15" />
          <path d="M19 21l0 -10.15" />
          <path d="M9 21v-4a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v4" />
        </svg>
        <p class="text-gray-700 pl-1 text-xs md:text-sm">
          No hay productos disponibles
        </p>
      </div>
    )
  }
</div>
