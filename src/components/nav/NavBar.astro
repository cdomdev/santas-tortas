---
import Modal from "../Modal.astro";
import ButtonCarShop from "./BtnCarShop.astro";
import FormLogin from "@/components/FormLogin.astro";
---
<nav class="bg-white dark:bg-gray-900 fixed w-full z-20 start-0">
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto px-4 pt-3"
  >
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <img src="/st-logo.jpeg" class="h-14 w-auto" alt="Santas tortas Logo" />
    </a>
    <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
      <ButtonCarShop />
      <button
        data-collapse-toggle="navbar-sticky"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
        aria-controls="navbar-sticky"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
    </div>
    <div
      class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1"
      id="navbar-sticky"
    >
      <ul
        class="flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700"
      >
        <li>
          <a
            href="/co"
            class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-pink-500 duration-150 md:p-0 md:dark:hover:text-pink-400 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
            aria-current="page">Personalizados</a>
        </li>
        <li>
          <a
            href="#"
            class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-pink-500 duration-150 md:p-0 md:dark:hover:text-pink-400 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
            >Productos</a>
        </li>
        <li>
          <a
            href="#"
            class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-pink-500 duration-150 md:p-0 md:dark:hover:text-pink-400 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
            >Mis compras</a>
        </li>
        <li>
          <Modal textModal={"Mi cuenta"} tittle={"Bienvenido a santas tortas"}>
            <div class="text-sm text-gray-500 dark:text-gray-400">
              <FormLogin />
            </div>
          </Modal>
        </li>
      </ul>
    </div>
  </div>
  <div class="wave-image"></div>
</nav>

<style>
  .wave-image {
    background-image: url("/bg-header.png");
    background-repeat: repeat-x;
    height: 40px; 
    position: absolute;
    bottom: -39px;
    left: 0;
    width: 100%;
    z-index: -1; 
    filter: drop-shadow(0 7px 4px rgba(209, 209, 209, 0.1))
  }

  
</style>
