---
type Props = {
  id: number | string;
  image: string;
  nombre: string;
  precio: string;
  descuento: number | null;
};

const { id, image, nombre, descuento, precio } = Astro.props;
---

<a
  href={`/detalle-producto/${id}`}
  class="card-producto rounded-sm flex justify-between flex-col h-auto md:w-[15em] max-h-[31em] border border-gray-200 transition duration-300 ease-in-out relative shadow-md hover:shadow-none"
>
  <picture>
    <img
      src={image}
      alt=`imagen-producto-${nombre}`
      class="rounded-sm w-full h-full object-cover duration-150"
    />
  </picture>
  <div class="flex flex-col items-center justify-center py-3">
    <p class="text-primary-txt pt-1 font-semibold text-base">{nombre}</p>
    <p class="text-gray-800 font-bold">{precio}</p>
  </div>
  <div class="absolute -bottom-7 left-0 w-full">
    <div class="flex gap-1 justify-center items-center">
      <button
        class="bg-white py-2 px-4 border text-xs md:text-sm hover:bg-[#d66a6e] hover:text-white shadow-md hover:shadow-none transition duration-300 ease-in-out"
        >Ver producto</button
      >
      <button
        class="bg-white p-2 border text-xs md:text-sm hover:bg-[#d66a6e] hover:text-white shadow-md hover:shadow-none transition duration-300 ease-in-out"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          width="24"
          height="24"
          class="size-5"
          stroke-width="2"
        >
          <path d="M4 19a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"></path>
          <path d="M12.5 17h-6.5v-14h-2"></path>
          <path d="M6 5l14 1l-.86 6.017m-2.64 .983h-10.5"></path>
          <path d="M16 19h6"></path>
          <path d="M19 16v6"></path>
        </svg></button
      >
    </div>
  </div>
</a>
