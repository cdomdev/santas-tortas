const products = [
  {
    id: 11,
    image: "/torta.png",
    nombre: "producto-1",
    precio: "100000",
    descuento: 10,
  },
  {
    id: 21,
    image: "/torta.png",
    nombre: "producto-2",
    precio: "100000",
    descuento: 6,
  },
  {
    id: 31,
    image: "/torta.png",
    nombre: "producto-3",
    precio: "100000",
    descuento: 5,
  },
  {
    id: 41,
