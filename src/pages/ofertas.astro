---
import LayoutPages from "@/layouts/LayoutPages.astro";
import CardProducts from "@/components/CardProducts.astro";
import {getProductosConOfertas } from "@/content";

const productosConOfertas = getProductosConOfertas()

---

<LayoutPages title="Ofertas - las mejores oferfas para que te des un gusto">
  <h1
    class="text-2xl md:text-3xl text-[#f1683a] font-bold mb-2 pl-3 md:pl-0"
    id="txt-title"
  >
    Ofertas en tortas y postres artesanales
  </h1>
    <p class="text-sm md:text-base text-wrap pl-3 md:pl-0" id="txt">
    Descubre sabor, calidad y diseño al mejor precio. ¡Haz tu pedido ahora y
    disfruta de nuestros descuentos!
  </p>
  <article>
    <div
      class="grid grid-cols-2 gap-x-2 md:grid-cols-4 gap-y-14 p-5 w-full mb-10 md:mb-16"
      id="cards-ofertas"
    >
      {
        productosConOfertas.map((per) => (
          <CardProducts
            id={per.id}
            descuento={per.descuento}
            image={per.imagen}
            nombre={per.nombre}
            precio={per.precio}
          />
        ))
      }
    </div>
  </article>
</LayoutPages>

<style>
    #txt-title,
    #txt,
    #cards-ofertas {
      opacity: 0;
      animation: showContent 0.5s 1s linear 1 forwards;
    }
  
    #filtros,
    #txt{
      transform: translateY(50px);
      filter: blur(20px);
    }
  
    #cards-ofertas {
      transform: translatex(-50px);
      filter: blur(5px);
    }
  
    @keyframes showContent {
      to {
        transform: translateY(0px);
        filter: blur(0px);
        opacity: 1;
      }
    }
  
    #txt-tittle {
      animation-delay: .5s;
    }
    #txt {
      animation-delay: 1.6s;
    }
    #cards-ofertas {
      animation-delay: 2.5s;
    }
  </style>
  