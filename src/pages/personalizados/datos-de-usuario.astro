---
import FormDatosUsuarios from "@/components/personalizados/FormDatosUsuario";
import LayoutPersonalizados from "@/layouts/LayoutPersonalizados.astro";
---

<LayoutPersonalizados subtitle="Datos personales" title="Datos de envio" page="datos-de-usuario">
  
  <p class="text-sm md:text-base text-wrap pl-4 md:mt-0 md:pl-0 mt-2">
    Para poder contactarte y coordinar la
    entrega, por favor dilignecia el siguiente formulario con los datos requeridos para la entrega.
  </p>

  <div class="w-full p-4 my-5 md:my-1">
    <FormDatosUsuarios client:load url="/personalizados/enviar-orden" />
    <div class="flex justify-end pr-5 md:pr-10 gap-3 mt-6">
      <a
        href="/personalizados/datos-de-orden-personalizada"
        class="text-black flex items-center hover:text-white transition duration-200 border hover:bg-[#7e7d7d] uppercase focus:outline-none font-medium rounded-lg text-sm px-5 py-3 text-center group"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          width="24"
          height="24"
          class="group-hover:-translate-x-1"
          stroke-width="2"
        >
          <path d="M5 12l14 0"></path>
          <path d="M5 12l4 4"></path>
          <path d="M5 12l4 -4"></path>
        </svg> Regresar</a
      >
    </div>
  </div>
</LayoutPersonalizados>
