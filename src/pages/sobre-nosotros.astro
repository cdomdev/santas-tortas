---
import LayoutPages from "@/layouts/LayoutPages.astro";
import ContainerSecctions from "@/components/ContainerSecctions.astro";
import { getCollection } from "astro:content";
export const prerender = true

const about = await getCollection('paginas');
const { title, introduccion,continueIntro,  mision, objetivos, satisfaccion_cliente } = about[1].data;
---

<LayoutPages title="Sobre nosotros - Santas Tortas">
  <ContainerSecctions class="mb-5 px-4 md:pl-0">
    <h1 class="font-semibold text-2xl md:text-3xl pt-6">{title}</h1>
  </ContainerSecctions>

  <ContainerSecctions  class="mb-5 px-4 md:pl-0">
    <p class="text-sm/6 md:text-base/7  md:px-0 text-balance">{introduccion}</p>
  </ContainerSecctions>

  <ContainerSecctions  class="mb-5 px-4 md:pl-0">
    <p class="text-sm/6 md:text-base/7 md:px-0 text-balance">{continueIntro}</p>
  </ContainerSecctions>

  <ContainerSecctions  class="mb-5 px-4 md:pl-0">
    <h2 class="text-lg md:text-xl font-semibold mb-2">Misi√≥n</h2>
    <p class="text-sm/6 md:text-base/7  md:px-0 text-balance">{mision}</p>
  </ContainerSecctions>

  <ContainerSecctions  class="mb-5 px-4 md:pl-0">
    <h2 class="text-lg md:text-xl font-semibold mb-2 ">Objetivos de Calidad</h2>
    <p class="text-sm/6 md:text-base/7  md:px-0 text-balance">{objetivos}</p>
  </ContainerSecctions>

  <ContainerSecctions class="pl-4 md:pl-0">
    <p class="text-sm/7 md:text-base/7  md:px-0 text-wrap">{satisfaccion_cliente}</p>
  </ContainerSecctions>
</LayoutPages>
